---
#loglevel: debug

# Which version of Bootstrap you want to use?
bootstrapVersion: 4

# Webpack loaders, order matters.
styleLoaders:
  - style-loader
  - css-loader?minimize
  - postcss-loader?config=./tools/postcss.config.js
  - sass-loader

# Extract styles to a stand-alone css file.
extractStyles: false

# Customize Bootstrap variables here.
preBootstrapCustomizations: ./src/styles/common/_variables.scss

# Import your custom styles here.
# Usually this file contains a list of @imports of your application styles.
appStyles: ./src/styles/app.scss

# Enable/Disable Bootstrap styles
styles:

  # Mixins
  mixins: true

  # Normalize
  normalize: true
  print: true

  # Core
  buttons: true
  code: true
  forms: true
  grid: true
  images: true
  reboot: true
  tables: true
  type: true

  # Components
  alert: true
  badge: true
  breadcrumb: true
  button-group: true
  card: true
  close: true
  custom: true
  custom-forms: true
  dropdown: true
  input-group: true
  jumbotron: true
  list-group: true
  media: true
  nav: true
  navbar: true
  pagination: true
  progress: true
  responsive-embed: true
  transitions: true

  # Components (JS required)
  carousel: true
  modal: true
  popover: true
  tooltip: true

  # Utilities
  utilities: true

# Enable/Disable Bootstrap scripts
scripts:
  alert: false
  button: false
  carousel: false
  collapse: false
  dropdown: false
  modal: false
  popover: false
  scrollspy: false
  tab: false
  tooltip: false
  util: false